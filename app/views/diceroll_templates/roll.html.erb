<ul>
<% if @sides == 6 && @roll == 2 %>
    <% @first_die = rand(1..6) %>
    <% @second_die = rand(1..6) %>
    <li><%=@first_die%></li>
    <li><%=@second_die%></li>
<% elsif @sides == 10 && @roll == 2 %>
    <% @first_die = rand(1..10) %>
    <% @second_die = rand(1..10) %>
   <li><%=@first_die%></li>
    <li><%=@second_die%></li>
<% elsif @sides == 20 && @roll == 1 %>
    <% @first_die = rand(1..20) %>
    <li><%=@first_die%></li>
  <% elsif @sides == 4 && @roll == 5 %>
    <% @first_die = rand(1..4) %>
    <% @second_die = rand(1..4) %>
    <% @third_die = rand(1..4) %>
    <% @fourth_die = rand(1..4) %>
    <% @fifth_die = rand(1..4) %>
    <li><%=@first_die%></li>
    <li><%=@second_die%></li>
    <li><%=@third_die%></li>
    <li><%=@fourth_die%></li>
    <li><%=@fifth_die%></li>
  <%else %>
   <%= @error = "Invalid Dice Roll." %> 
  <%end%>  
</ul>
